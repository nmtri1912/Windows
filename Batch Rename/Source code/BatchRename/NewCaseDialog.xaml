<Window x:Class="BatchRename.NewCaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="NewCaseDialog" Height="300" Width="300">
    <Canvas>
        <Label Canvas.Left="10" FontSize="15" FontWeight="Bold" Canvas.Top="10" Width="245" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">New Case Extension</Label>
        <Label Canvas.Left="55" Canvas.Top="40" Width="158">Please tick into circles here</Label>
        <RadioButton Name="UppercaseButton" Canvas.Left="32" Canvas.Top="84" Content="UpperCase"></RadioButton>
        <RadioButton Name="LowerCaseButton" Canvas.Left="33" Canvas.Top="123"  Content="LowerCase"></RadioButton>
        <RadioButton Name="Standard"  Canvas.Left="33" Canvas.Top="160" Content="Standard"></RadioButton>
        <Button Content="OK" Canvas.Left="34" Canvas.Top="198" Width="75" Click="btnOKButton_Click" RenderTransformOrigin="0.53,-1.327"/>
        <Button Content="Cancel" IsCancel="True" Canvas.Left="138" Canvas.Top="198" Width="75" RenderTransformOrigin="0.912,-4.721"/>

    </Canvas>
</Window>
